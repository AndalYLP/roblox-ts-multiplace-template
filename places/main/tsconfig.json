{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
		"baseUrl": "src",
		"rootDirs": ["src", "tests", "../common/src", "../common/test"],
		"moduleResolution": "node",
		"paths": {
			"common/*": ["../../common/src/*"],
			"types/*": ["../../common/src/types/*"],
			"tests/*": ["../tests/*"],
			"test/*": ["../../common/test/*"]
		},
		"typeRoots": [
			"../../node_modules/@rbxts",
			"../../node_modules/@flamework",
			"node_modules/@rbxts",
			"node_modules/@flamework",
			"../common/src/*",
			"../common/test/*"
		],
		"outDir": "out"
	},
	"include": [
		"src",
		"tests",
		"../common/src",
		"../common/test"
	]
}
